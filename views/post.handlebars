<div>
  <h2>{{post.title}}</h2>
  <p>{{post.post_text}}</p>
  <p>Created by {{post.user.name}} on {{format_date post.createdAt}}</p>
  
</div>

<div class="col-md-6">
  <h3>Create a New Comment:</h3>

  <form class="form new-comment-form" data-postid="{{post.id}}">
    <div class="form-group">
      <label for="comment-desc">Comment:</label>
      <textarea
        class="form-input"
        id="comment-desc"
        name="comment-desc"
      ></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>

{{#if post.comments}}
<div class="col-md-6 post-list">
  <h3>Comments:</h3>

  {{#each post.comments as |comment|}}
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
   
        <p>{{comment.comment_text}}</p>
        <p>From {{comment.user.name}} on {{format_date comment.createdAt}}</p>
      </div>
    </div>
  {{/each}}
</div>
{{/if}}


<script src="/js/comment.js"></script>


