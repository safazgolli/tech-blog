<div class="col-md-6">
    <h3>Edit Post:</h3>

    <form class="form new-post-form" data-postid="{{id}}">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" value="{{title}}"/>
      </div>
      <div class="form-group">
        <label for="post-desc">Content:</label>
        <textarea class="form-input" id="post-desc" name="post-desc">{{post_text}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </div>
    </form>
       <div class="col-md-4">
        <button class="btn btn-sm btn-danger" id="delete">DELETE</button>
      </div>
  </div>
<script src="/js/edit.js"></script>